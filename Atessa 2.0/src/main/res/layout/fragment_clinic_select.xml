<?xml version="1.0" encoding="utf-8"?>
<!--suppress ALL -->
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ClinicSelectActivity$PlaceholderFragment">


    <RelativeLayout
        android:id="@+id/tab1_content"
        android:layout_width="match_parent"
        android:background="@color/colorWhite"
        android:layout_marginTop="175dp"
        android:layout_height="match_parent">

        <TextView
            android:text="@string/str_people_ahead"
            android:textColor="@color/colorHint"
            android:layout_width="match_parent"
            android:layout_marginBottom="112dp"
            android:fontFamily="serif"
            android:textAlignment="center"
            android:textSize="18dp"
            android:layout_alignParentBottom="true"
            android:layout_height="40dp" />

        <TextView
            android:id="@+id/tvSelectedLive"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_marginStart="0dp"
            android:layout_marginTop="70dp"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:background="@drawable/round_bg_circleblue"
            android:gravity="center"
            android:text="@string/str_noline"
            android:textSize="50sp"
            android:textStyle="normal"
            android:textColor="@color/colorWhite"
            tools:ignore="RtlSymmetry" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/tab2_content"
        android:layout_width="match_parent"
        android:layout_marginTop="150dp"
        android:background="@color/colorWhite"
        android:visibility="visible"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="118dp"
            android:layout_marginTop="132dp"
            android:src="@drawable/tup" />

        <TextView
            android:id="@+id/tvSelectedRating"
            android:textSize="32sp"
            android:textColor="@color/colorGreen"
            android:textStyle="normal"
            android:layout_marginStart="10dp"
            android:layout_marginTop="125dp"
            android:layout_width="match_parent"
            android:text="@string/str_100perc"
            android:textAlignment="center"
            android:layout_height="50dp" />

    </RelativeLayout>


</android.support.constraint.ConstraintLayout>